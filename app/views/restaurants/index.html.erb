<h1><strong> List of all the restaurants</strong></h1>

<div class="container list-group">
  <ul>
  <%= link_to 'Add a new restaurant', new_restaurant_path, class: "btn btn-primary" %>
  <br>
    <% @restaurants.each do |restaurant| %>
    <li class="list-group-item">
        <%= link_to restaurant.name, restaurant_path(restaurant), class: "btn btn-secondary" %>
        <%= restaurant.category.capitalize %>
    </li>
    <% end %>
  </ul>
</div>
