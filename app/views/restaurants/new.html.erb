<%= simple_form_for (@restaurant) do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.select :category, options_for_select(["Select a category", "chinese", "italian", "japanese", "french", "belgian"]) %>
  <%= f.button :submit, class: "btn btn-primary" %>
<% end %>
